{
    "compilerOptions": {
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "lib": ["DOM"],
        "module": "ESNext",
        "outDir": "./public/assets/js/",
        "skipLibCheck": true,
        "strict": true,
        "target": "ESNext",
        "rootDir": "./ts/",
        "strictNullChecks": false,
        "watch": true,
    },
    "include": ["./ts/"],
    "exclude": ["./ts/Types.ts"],
}
